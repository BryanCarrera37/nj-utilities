{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "**/*.d.ts",
    "**/__mocks__/*"
  ]
}